
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <h2>填寫購物資料</h2>
            <p>本賣場販售之商品，僅提供賣家自訂物流服務。</p>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>商品名稱</th>
                        <th>單價</th>
                        <th>數量</th>
                        <th>小計</th>
                        <th>刪除</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>優格-零穀成犬體重管理配方15LB</td>
                        <td>NT$290</td>
                        <td>1</td>
                        <td>NT$290</td>
                        <td><span class="glyphicon glyphicon-trash"></span></td>
                    </tr>
                </tbody>
            </table>
            <hr>
            <div class="row">
                <div class="col-md-3 col-md-offset-8">
                    <div>
                        <div class="">總計： NT$290</div>
                    </div>
                </div>
            </div>
            <div>
                <h2>訂購人資訊</h2>
                <hr>
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="radio-inline"><input type="radio" name="optradio">先生</label>
                        <label class="radio-inline"><input type="radio" name="optradio">小姐</label>
                        <label class="control-label col-md-2" for="email">中文名字:</label>
                        <div class="col-md-3">
                            <input type="email" class="form-control" id="email" placeholder="" name="email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2" for="email">手機號碼:</label>
                        <div class="col-md-3">
                            <input type="email" class="form-control" id="email" placeholder="" name="email">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2" for="email">收貨地址:</label>
                        <div class="col-md-6">
                            <input type="email" class="form-control" id="email" placeholder="" name="email">
                        </div>
                    </div>
                </div>
                <hr>
                <div class="col-md-4 col-md-offset-5">
                    <button type="button" class="btn btn-primary btn-warning">繼續購物</button>
                    <button type="button" class="btn btn-primary btn-success">完成訂購</button>
                </div>
            </div>
        </div>
    </div>
</div>

