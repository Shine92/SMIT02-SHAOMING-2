@using SMIT02_MVC5.Models;
@model Member
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPage.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-default">
                <div class="panel-heading">會員登入</div>
                <form method="post" action="">
                    <div class="panel-body">
                        <div class="form-group">
                            <label for="account">帳號:</label>
                            <input type="text" class="form-control input-sm" id="Account" name="Account" value="">
                        </div>
                        <div class="form-group">
                            <label for="password">密碼:</label>
                            <input type="password" class="form-control input-sm" id="Password" name="Password" value="">
                        </div>
                    </div>
                    <div class="panel-footer">
                        @TempData["ErrorMsg"]
                        <input type="submit" id="RegisterBtn" class="btn btn-success btn-block center-block" value="登入" />
                        <button type="button" id="SignUpBtn" class="btn btn-primary btn-block center-block"> 註冊</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>